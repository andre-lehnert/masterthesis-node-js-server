{
  "name": "masterthesis-rpi-server",
  "version": "0.0.1",
  "description": "A server with REST-API to control a physical 3D barchart over IÂ²C",
  "main": "app.js",
  "license": "MIT",
  "repository": "",
  "author": "Andre Lehnert <lehnert.andre@gmail.com>",
  "dependencies": {
    "angular": "^1.5.5",
    "angular-animate": "^1.5.5",
    "angular-aria": "^1.5.5",
    "angular-material": "^1.0.8",
    "angular-messages": "^1.5.5",
    "angular-route": "^1.5.5",
    "angular-sanitize": "^1.5.5",
    "async": "~0.2.8",
    "body-parser": "^1.15.1",
    "clean-css": "^3.4.12",
    "express": "~3.2.4",
    "fs": "0.0.2"
  },
  "devDependencies": {
    "angular-mocks": "^1.4.9",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.19",
    "karma-chrome-launcher": "^0.2.2",
    "karma-jasmine": "^0.3.6",
    "live-server": "^0.9.1",
    "jshint": "latest",
    "browserify": "latest",
    "rimraf": "latest",
    "mkdirp": "^0.5.1",
    "copyfiles": "^0.2.1"
  },
  "scripts": {
    "prestart": "npm update",
    "test": "karma start ./test/karma.conf.js",
    "start": "node dist/app.js",
    "lint": "jshint **.js",
    
    "prebuild:dir": "mkdirp dist dist/client dist/client/assets dist/client/assets/angular dist/client/src build build/js",
    "build:html": "copyfiles -f app/*.html dist/client/",
    
    "build:angular-material-css": "cleancss -o dist/client/assets/angular/angular-material.min.css node_modules/angular-material/angular-material.min.css",
    "build:css": "npm run build:angular-material-css",
    
    "build:angular-material": "browserify node_modules/angular-material/angular-material.min.js > build/js/angular-material.js",
    "build:angular": "browserify node_modules/angular/angular.min.js > build/js/angular.js",
    "build:angular-animate": "browserify node_modules/angular-animate/angular-animate.min.js > build/js/angular-animate.js",
    "build:angular-aria": "browserify node_modules/angular-aria/angular-aria.min.js > build/js/angular-aria.js",
    "build:js": "npm run build:angular && npm run build:angular-animate && npm run build:angular-aria && npm run build:angular-material",
    "build:js-dependencies": "browserify build/js/*.js > dist/client/assets/angular/angular.js",
    "build": "npm run clean:dist && npm run clean:build && npm run prebuild:dir && npm run build:html && npm run build:css && npm run build:js && npm run build:js-dependencies && npm run clean:build",
    "clean:dist": "rimraf dist",
    "clean:build": "rimraf build",
    "clean:modules": "rimraf node_modules",
    "clean": "npm run clean:dist && npm run clean:build && npm run clean:modules",
    "init": "npm run clean && npm install"
  },
  "private": true
}
